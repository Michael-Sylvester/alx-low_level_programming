CC=gcc
SRC=main.c school.c
OBJ=main.o school.o
NAME=school
RM=rm

all: school

school: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

object: $(SRC)
	$(CC) -c -o $(OBJ) $(SRC)

clean:
	$(RM) -f *~ *.swp *# school

oclean:
	$(RM) -f *.o

fclean:
	*~ *.swp *# school *.o

re:
	touch $(SRC)
	$(CC) -c -o $(OBJ) $(SRC)
